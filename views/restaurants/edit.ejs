<% layout('/layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">Edit Restaurant</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/restaurants/<%=restaurant.id%>?_method=PUT " method="POST" novalidate enctype="multipart/form-data" class="needs-validation">

                <div class="mb-3">
                    <label class="form-label" for="title">Restaurant Name</label>
                    <input class="form-control" type="text" required id="title" name="restaurant[Name]" value="<%=restaurant.Name%>" required>
                    <div class="valid-feedback">looks good!</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="restaurant[location]" value="<%=restaurant.location%>" required>
                    <div class="valid-feedback">looks good!</div>
                </div>
                <div class=" mb-3">
                    <select class="form-select" name="restaurant[Category]" aria-label="Default select example" required>
                        <div class="valid-feedback">looks good!</div>
                        <option selected>
                            <%=restaurant.Category%>
                        </option>
                        <% for (let i=0; i < catList.length; i++) { %>
                            <option value="<%=catList[i]%>">
                                <%=catList[i]%>
                            </option>
                            <% } %>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="images" class="form-label">Add Images</label>
                    <input class="form-control" type="file" id="images" name="Image" multiple>
                </div>
                <div class="mb-3">
                    <% restaurant.images.forEach(function(img,i){%>
                        <img src="<%= img.thumb%> " alt="" class="img-thumbnail">
                        <div class="form-check-inline">
                            <input type="checkbox" name="deleteImages[]" value="<%= img.filename %>" id="img-<%= i %>">
                            <label for="img-<%= i %> ">Delete?</label>
                        </div>
                        <% }) %>
                </div>

                <div class=" mb-3">
                    <label class="form-label" for="description">Write about your restaurant</label>
                    <textarea class="form-control" type="text" id="description" name="restaurant[description]" value="<%= restaurant.description %>" required><%= restaurant.description %></textarea>
                    <div class="valid-feedback">looks good!</div>
                </div>

        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-3 offset-3 ">
                    <div class="input-group">
                        <span class="input-group-text">menu item</span>
                        <label class="visually-hidden" for="menu-item">menu item</label>
                        <input class="form-control" type="text" id="menu-item">
                    </div>
                </div>

                <div class="col-md-2 ">
                    <div class="input-group">
                        <input class="form-control" type="number" id="price-item">
                        <span class="input-group-text">$</span>
                    </div>
                </div>

                <div class="col-md-2 ">
                    <button class="btn btn-outline-secondary" type="button" id="addbtn">add menu item</button>
                </div>
                <div>
                    <ul class="mt-3 offset-3" id="ul">

                    </ul>
                </div>
            </div>
        </div>

        <div class="mb-3 offset-3">
            <button class=" btn btn-primary">Save Changes</button>
            <span><a href="/restaurants">Back To List</a></span>
        </div>
        </form>


    </div>
    <script src="/menu.js">
    </script>