<% layout('/layouts/boilerplate') %>
    <div id="cluster-map"></div>


    <h1>All Restaurants</h1>
    <div>
        <a href="/restaurants/new">Add Restaurant</a>
    </div>

    <% for (let restaurant of restaurants) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if(restaurant.images.length) {%>
                        <img src="<%= restaurant.images[0].url %> " alt="" class="img-fluid">
                        <% }else{ %>
                            <img src="/images/placeholder.png" alt="" class="img-fluid">
                            <% } %>
                </div>
                <div class="column-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= restaurant.Name %>
                        </h5>
                        <span class="text-muted">
                            <%= restaurant.Category %>
                        </span>
                        <p class="card-text">
                            <%= restaurant.description %>
                                <small class="text-muted">
                                    <%= restaurant.location %>
                                </small>
                        </p>
                        <a class="btn btn-primary" href="restaurants/<%= restaurant.id %>">view <%= restaurant.Name %>
                        </a>

                    </div>
                </div>
            </div>
        </div>
        <% } %>
            <script>
                const mapToken = '<%-process.env.MAPBOX_TOKEN%>'
                const restaurants = {
                    features: <%-JSON.stringify(restaurants)%>
                }
            </script>
            <script src="/js/clustermap.js"></script>