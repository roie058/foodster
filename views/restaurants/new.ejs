<% layout('/layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Restaurant</h1>
        <div class="col-md-6 offset-md-3">
            <form class="needs-validation" action="/restaurants" method="POST" enctype="multipart/form-data" novalidate>

                <div class="mb-3">
                    <label class="form-label" for="title">Restaurant Name</label>
                    <input class="form-control" type="text" id="title" name="restaurant[Name]" required>
                    <div class="valid-feedback">looks good!</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="restaurant[location]" required>
                    <div class="valid-feedback">looks good!</div>
                </div>
                <div class="mb-3">
                    <select class="form-select" name="restaurant[Category]" aria-label="Default select example" required>
                        <option value="<%=catList[0]%>"> <%=catList[0]%></option>
                        <% for (let i=1; i < catList.length; i++) { %>
                            <option value="<%=catList[i]%>">
                                <%=catList[i]%>
                            </option>
                            <% } %>
                        
                    </select>
                    <div class="valid-feedback">looks good!</div>
                </div>
                <div class="mb-3">
                    <label for="images" class="form-label">Upload Images</label>
                    <input class="form-control" type="file" id="images" name="Image" multiple>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Write about your restaurant</label>
                    <textarea class="form-control" type="text" id="description" name="restaurant[description]" required>  </textarea>
                    <div class="valid-feedback">looks good!</div>
                </div>

        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-3 offset-3 ">
                    <div class="input-group">
                        <span class="input-group-text">menu item</span>
                        <label class="visually-hidden" for="menu-item">menu item</label>
                        <input class="form-control" type="text" id="menu-item">
                    </div>
                </div>

                <div class="col-md-2 ">
                    <div class="input-group">
                        <input class="form-control" type="number" id="price-item">
                        <span class="input-group-text">$</span>
                    </div>
                </div>



                <div class="col-md-2 ">
                    <button class="btn btn-outline-secondary" type="button" id="addbtn">add menu item</button>
                </div>
                <div>
                    <ul class="mt-3 offset-3" id="ul" name="restaurant[Menu]">

                    </ul>

                </div>
            </div>
        </div>

        <div class="mb-3 offset-3">
            <button class=" btn btn-primary">Add Restaurant</button>
            <span><a href="/restaurants">Back To List</a></span>
        </div>
        </form>


    </div>

    <script src="/menu.js">
    </script>